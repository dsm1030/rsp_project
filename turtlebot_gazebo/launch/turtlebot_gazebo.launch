<launch>
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger]"/>
  <arg name="x_pos" default="0.0"/>
  <arg name="y_pos" default="0.0"/>
  <arg name="z_pos" default="0.0"/>
 <arg name="x2_pos" default="1.0"/>
  <arg name="y2_pos" default="1.0"/>
  <arg name="z2_pos" default="0.0"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find turtlebot_gazebo)/worlds/empty.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot_gazebo)/urdf/turtlebot3_$(arg model)_artag.urdf.xacro" />

  <group ns="follower"> 
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot_gazebo)/urdf/turtlebot3_$(arg model)_camera.urdf.xacro" />
  </group>
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" args="-urdf -model turtlebot3_$(arg model) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf2" args="-urdf -model turtlebot3_$(arg model)_2 -x $(arg x2_pos) -y $(arg y2_pos) -z $(arg z2_pos) -param robot_description" respawn="false" ns="follower" />
</launch>
